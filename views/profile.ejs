<% include ./partials/header.ejs %>
<div class="profile w-full min-h-screen bg-zinc-800 text-white pt-1">
  <form id="uploadform" hidden action="/fileupload" method="post" enctype="multipart/form-data">
    <input type="file" name="image">
  </form>
  <div class="profdets flex flex-col items-center justify-center mt-20">
    <div class="relative">
      <span id="uploadicon" class="w-8 h-8 rounded-full absolute bottom-0 right-0 flex items-center justify-center bg-zinc-200"><i class="ri-pencil-fill text-black"></i></span>
      <div class="w-32 h-32 mt-2 bg-zinc-200 rounded-full overflow-hidden">
        <img class="h-full w-full object-cover" src="/images/uploads/<%= user.profilepic %>" alt="">
      </div>
    </div>
    <h1 class="text-3xl text-white mt-5 font-semibold text-center"><%= user.name %></h1>
    <h3 class="text-md text-white text-center">@<%= user.username %></h3>
    <a href="/edit" class="px-4 mt-4 text-white text-xs font-semibold mb-2 py-2 bg-zinc-700 rounded-full">Edit</a>
    <a href="/add" class="px-6 py-2 rounded-lg bg-red-700 text-xs font-semibold mt-3">Add New Post</a>
  </div>
  <div class="cards flex flex-wrap gap-6 mt-10 mx-2">
    <div class="card w-full md:w-1/2 lg:w-1/3 xl:w-1/4">
      <div class="w-full h-48 bg-zinc-200 rounded-lg overflow-hidden">
        <img class="w-full h-full object-cover" src="/images/uploads/<%= user?.posts[0]?.image %>" alt="">
      </div>
      <a href="/show/posts" class="text-sm font-semibold mt-2 block overflow-hidden whitespace-nowrap overflow-ellipsis">Your uploaded pins</a>
      <h5 class="text-xs font-medium opacity-60"><%= user.posts.length %> Pins</h5>
    </div>
    <!-- Add more cards for other posts as needed -->
  </div>
</div>

<script>
  document.querySelector("#uploadicon").addEventListener("click", function(){
    document.querySelector("#uploadform input").click();
  });        
  document.querySelector("#uploadform input").addEventListener("change", function(){
    document.querySelector("#uploadform").submit();
  });
</script>
<% include ./partials/footer.ejs %>
